{
  "name": "mgda-website",
  "version": "1.0.0",
  "description": "Website for the Maring√° GameDev Association.",
  "main": "index.js",
  "repository": "https://github.com/theosirian/mgda-website.git",
  "author": "Tiago Nascimento <xtheosirian@gmail.com>",
  "contributors": ["Guilherme Chichanoski <guilhermechichanoski@gmail.com>"],
  "license": "MIT",
  "private": false,
  "dependencies": {
    "live-server": "^1.2.0",
    "node-sass-chokidar": "^1.3.0",
    "pug-cli": "^1.0.0-alpha6",
    "static-server": "^2.2.1",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "build:html": "pug ./src/pages -o ./public",
    "build:css": "node-sass-chokidar ./src/css -o ./public/css",
    "build": "run-s build:*",
    "live:html": "pug --watch ./src/pages -o ./public",
    "live:css": "node-sass-chokidar ./src/css -o ./public/css --watch",
    "live:serve":
      "live-server --host=0.0.0.0 --port=1337 --browser=qutebrowser --watch=public public",
    "live": "run-p live:*",
    "start": "yarn run live"
  }
}
